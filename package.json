{
  "name": "lightup",
  "displayName": "LightUp",
  "version": "0.0.1",
  "description": "Your AI-powered reading companion that instantly clarifies and explains any text with precision and insight",
  "author": "mosadiq",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.12.0",
    "framer-motion": "^11.11.11",
    "plasmo": "0.89.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "background": {
      "service_worker": "src/background.ts"
    },
    "host_permissions": [
      "http://127.0.0.1:1234/*"
    ],
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "storage"
    ]
  
  }
}
